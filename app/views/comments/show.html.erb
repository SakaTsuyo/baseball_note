<div class="comment-wrapper">
    <p>コメント一覧</p>
    <% @comments.each do |c| %>
        <div>
        <%= c.teacher.email unless c.teacher.blank? %>
        <br>
        <%= c.content %>
        </div>
        <br>
    <% end %>

    <% if user_signed_in? %>
        <%= form_with(model: [@tweet, @comment], local: true) do |f| %>
            <%= f.text_area :content %>
            <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
            <% end %>
        <% end %>
    <% end %>
</div>
<%= link_to "Tweet一覧に戻る", teachers_path %>